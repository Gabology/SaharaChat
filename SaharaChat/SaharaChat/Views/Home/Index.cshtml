    <script>

        var canvas = document.getElementById('myCanvas');
        var context = canvas.getContext('2d');

        function createCircle(imageId) {
            canvas.style.display = "block";

            document.getElementById('stage').style.overflowY = "hidden";
            var circle = new Image(10, 10);
            circle.src = document.getElementById(imageId).src;
            context.drawImage(circle, (0), (0));
        }

        function drawIt(e) {
            var position = getMousePos(canvas, e);
            positionX = position.x;
            positionY = position.y;
            context.fillStyle = "#000000";
            context.beginPath();
            context.arc(positionX, positionY, 20, 0, 2*Math.PI);
            context.fill();
        }

        function getMousePos(canvas, evt) {
            var rect = canvas.getBoundingClientRect();
            return {
                x: evt.clientX - rect.left,
                y: evt.clientY - rect.top
            };
        }

        window.drawIt = drawIt;


